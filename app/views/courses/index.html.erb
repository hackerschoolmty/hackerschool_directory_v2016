
<div class="page-header">
  <h1>Cursos</h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th> ID </th>
      <th> Nombre </th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td><%= link_to course.id, generation_course_path(@generation, course) %></td>
        <td><%= course.name %></td>
        <td>
          <%= link_to "Editar",
                      edit_generation_course_path(@generation, course), :class => 'btn btn-default btn-xs' %>
          <%= link_to "Eliminar",
                      generation_course_path(@generation, course),
                      :method => :delete,
                      :data => { :confirm => "¿Realmente estás seguro de borrar?" },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "Nuevo Curso",
            new_generation_course_path(@generation),
            :class => 'btn btn-primary' %>
