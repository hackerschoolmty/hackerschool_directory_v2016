
<div class="page-header">
  <h1>Lenguajes</h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th> ID </th>
      <th> Nombre </th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @lenguages.each do |language| %>
      <tr>
        <td><%= link_to language.id, language_path(language) %></td>
        <td><%= language.name %></td>
        <% if hacker_signed_in? %>
          <td>

            <%= link_to "Editar",
                      edit_language_path(language), :class => 'btn btn-default btn-xs' %>
          <td>
            <%= link_to "Eliminar",
                      language_path(language),
                      :method => :delete,
                      :data => { :confirm => "¿Realmente estás seguro de borrar?" },
                      :class => 'btn btn-xs btn-danger' %>
          </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<% if hacker_signed_in? %>
  <%= link_to "Nuevo Lenguaje",
            new_language_path,
            :class => 'btn btn-primary' %>
<% end %>